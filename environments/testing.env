# =============================================================================
# ðŸ§ª TESTING ENVIRONMENT CONFIGURATION
# =============================================================================
# Configuration for automated testing and CI/CD pipelines
# =============================================================================

# Cloudflare API Configuration
CLOUDFLARE_API_TOKEN=your_testing_token_here

# Cluster Configuration
CLUSTER_NAME=test-cluster
KIND_WORKERS=2
KIND_NODE_IMAGE=kindest/node:v1.28.0

# Namespace Configuration
ELK_NAMESPACE=elk-test
APP_NAMESPACE=app-test
METALLB_NAMESPACE=metallb-test

# Deployment Configuration
DEPLOYMENT_MODE=complete
EXPOSE_SERVICES=true
CLEANUP_FIRST=true
STORAGE_CLASS=standard

# ELK Stack - Testing Resources
ELASTICSEARCH_REPLICAS=1
ELASTICSEARCH_MEMORY=1.5Gi
ELASTICSEARCH_CPU=750m
ELASTICSEARCH_STORAGE=8Gi

KIBANA_MEMORY=768Mi
LOGSTASH_MEMORY=768Mi
FILEBEAT_MEMORY=128Mi

# Application Services - Testing Resources
POSTGRES_PASSWORD=test123
POSTGRES_USER=testuser
POSTGRES_DB=testdb
POSTGRES_STORAGE=3Gi

ORDER_SERVICE_REPLICAS=2
USER_SERVICE_REPLICAS=2
ORDER_SERVICE_IMAGE=order-service:test
USER_SERVICE_IMAGE=user-service:test

# Networking - Testing
METALLB_IP_RANGE=172.18.255.220-172.18.255.240

# Security - Testing Secrets
ORDER_SERVICE_JWT_SECRET=test-order-secret
USER_SERVICE_JWT_SECRET=test-user-secret
APP_SECRET_KEY=test-app-secret

# Testing Settings
DEBUG=true
VERBOSE=true
DEV_MODE=false
SKIP_VALIDATIONS=false

# Resource Limits - Testing
DEFAULT_CPU_REQUEST=100m
DEFAULT_MEMORY_REQUEST=128Mi
DEFAULT_CPU_LIMIT=500m
DEFAULT_MEMORY_LIMIT=512Mi

# Feature Flags - Testing
ENABLE_METALLB=true
ENABLE_MONITORING=true
ENABLE_BACKUP=false
ENABLE_SSL=false
ENABLE_INGRESS=false

# Backup Configuration - Testing
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=7

# Testing Specific
ENABLE_AUTOSCALING=false
ENABLE_SERVICE_MESH=false

# Timeouts - Testing
DEPLOYMENT_TIMEOUT=900
CLEANUP_TIMEOUT=300
VALIDATION_TIMEOUT=180